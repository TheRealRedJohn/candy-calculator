<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light Theme. Default application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:buttonStyle">@style/ButtonTheme</item>
        <item name="android:imageButtonStyle">@style/ImageButtonTheme</item>
        <item name="buttonStyle">@style/ButtonTheme</item>
        <item name="imageButtonStyle">@style/ImageButtonTheme</item>

        <item name="android:navigationBarColor">@color/darkColorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="PreferenceTheme" parent="BaseTheme">
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor" tools:targetApi="21">?colorPrimaryDark</item>
    </style>

    <style name="ButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="ImageButtonTheme" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/colorText</item>
    </style>

    <!-- Teal Theme. -->
    <style name="BaseTheme.Teal">
        <item name="android:windowBackground">@color/tealColorPrimary</item>
        <item name="colorPrimary">@color/tealColorPrimary</item>
        <item name="colorPrimaryDark">@color/tealColorPrimaryDark</item>
        <item name="colorAccent">@color/tealColorAccent</item>

        <item name="android:navigationBarColor" tools:targetApi="21">@color/tealColorPrimaryDark
        </item>
    </style>

    <style name="PreferenceTheme.Teal">
        <item name="android:windowBackground">@color/tealColorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/tealColorPrimaryDark</item>
        <item name="colorAccent">@color/tealColorAccent</item>
    </style>

    <!-- Amber Theme -->
    <style name="BaseTheme.Amber">
        <item name="android:windowBackground">@color/amberColorPrimary</item>
        <item name="colorPrimary">@color/amberColorPrimary</item>
        <item name="colorPrimaryDark">@color/amberColorPrimaryDark</item>
        <item name="colorAccent">@color/amberColorAccent</item>
    </style>

    <style name="PreferenceTheme.Amber">
        <item name="android:windowBackground">@color/amberColorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/amberColorPrimaryDark</item>
        <item name="colorAccent">@color/amberColorAccent</item>
    </style>

    <!-- Pink Theme -->
    <style name="BaseTheme.Pink">
        <item name="android:windowBackground">@color/pinkColorPrimary</item>
        <item name="colorPrimary">@color/pinkColorPrimary</item>
        <item name="colorPrimaryDark">@color/pinkColorPrimaryDark</item>
        <item name="colorAccent">@color/pinkColorAccent</item>

        <item name="android:navigationBarColor" tools:targetApi="21">@color/pinkColorPrimaryDark
        </item>
    </style>

    <style name="PreferenceTheme.Pink">
        <item name="android:windowBackground">@color/pinkColorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/pinkColorPrimaryDark</item>
        <item name="colorAccent">@color/pinkColorAccent</item>
    </style>

    <!-- Blue Theme -->
    <style name="BaseTheme.Blue">
        <item name="android:windowBackground">@color/blueColorPrimary</item>
        <item name="colorPrimary">@color/blueColorPrimary</item>
        <item name="colorPrimaryDark">@color/blueColorPrimary</item>
        <item name="colorAccent">@color/blueColorAccent</item>

        <item name="android:navigationBarColor" tools:targetApi="21">@color/blueColorPrimaryDark
        </item>
    </style>

    <style name="PreferenceTheme.Blue">
        <item name="android:windowBackground">@color/blueColorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/blueColorPrimaryDark</item>
        <item name="colorAccent">@color/blueColorAccent</item>
    </style>

</resources>