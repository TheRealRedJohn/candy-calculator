<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NumberKeyPad" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_num_pad</item>
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="FunctionKeyPad" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_num_pad</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ExpressionDisplay">
        <item name="android:textSize">38sp</item>
        <item name="android:gravity">end|bottom</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ResultDisplay">
        <item name="android:textSize">56sp</item>
        <item name="android:gravity">end|bottom</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>